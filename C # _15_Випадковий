namespace ConsoleApp74
{
    class Program
    {
        //Визначення дня тижня

        static void Main(string[] args)
        {
            // Коли нам потрібно випадкове число на комп’ютері, ми використовуємо таку процедуру:


            //1. Я створю генератор випадкових чисел наступним чином:
            Random random = new Random();

            // Мені потрібен лише один генератор для всієї програми, він ніколи не отримає вас
            // в одній програмі не повинно з'являтися два нових оператора Random ().

            // А тепер я збираюся запитати у генератора «наступне» випадкове число.
            // Я повинен дати йому два параметри - нижню межу і верхню межу

            int randomly = random.Next(1, 7);
            Console.WriteLine($"A number was thrown to the bone: {randomly}");
            Console.ReadKey();
            // ось як я створюю випадкове число від 1 до 7
            // нижня межа 1 між значеннями може бути
            // верхня межа - це перше число, яке там не може бути



            /* налаштувати програму на кидок (два варіанти діви або орла) 

            int throw = random.Next(0, 2); 

            if (throw == 0)
                Console.WriteLine("The virgin fell.");
            else
                Console.WriteLine("The eagle fell.");

            Console.WriteLine();
            */
            /* Pozor */
            //int number = random.Next(0, 1);
            //Console.WriteLine(number); // це ніколи не друкуватиме нічого, крім нуля!
        }
        }
    }
