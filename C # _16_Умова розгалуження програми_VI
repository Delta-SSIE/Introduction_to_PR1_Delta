namespace ConsoleApp74
{
    class Program
    {
        //Визначення дня тижня

        static void Main(string[] args)
        {
            Console.WriteLine("Enter the day number");
            string input = Console.ReadLine();
            int day = int.Parse(input);

            string word;

            switch (day)
            {
                case 1:
                    word = "Monday";
                    break;

                case 2:
                    word = "Tuesday ";
                    break;

                case 3:
                    word = "Wednesday";
                    break;
                case 4:
                    word = "Thursday ";
                    break;
                case 5:
                    word = "Friday ";
                    break;
                case 6:
                    word = "Saturday ";
                    break;
                case 7:
                    word = "Sunday";
                    break;

                default:
                    word = "unknown day";
                    break;
            }

            Console.WriteLine($"Dnes je {word}.");
            Console.ReadKey();
        }
        }
    }
